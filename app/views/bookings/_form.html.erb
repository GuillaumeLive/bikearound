<%= simple_form_for([@bike, @booking]) do |f| %>
    <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Choose your dates</h2>

        <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Go", class: "btn btn-primary" %>
    </div>
    </div>
<% end %>
