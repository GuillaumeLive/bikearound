<div class="banner">
  <div class="container text-center">
    <h1>Check our bikes</h1>
    <div class="row">
      <div class="col">
        <% if @query %>
          <p>You searched for <strong><%= @query %></strong>. We found <%= @bikes.count %> bikes out of our <%= Bike.count %> on our website.</p>
        <% else %>
          <p>All <%= Bike.count %> bikes.</p>
        <% end %>
        <div>
          <%= link_to 'Create new bike', new_bike_path  %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container pt-4">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-3">
        <div class="bike-card">
          <%= cl_image_tag(bike.photo.key) %>
          <div class="bike-card-content">
            <div class="bike-card-title">
              <h5><%= bike.description %></h5>
            </div>
            <p><%= bike.localization %></p>
            <div class="flex">
              <i class="material-icons mr-2">â‚¬</i> <%= bike.price %>
            </div>
          </div>
          <div class="bike-card-actions">
            <%= link_to 'More info', bike_path(bike) %>
            <%= link_to 'Edit', edit_bike_path(bike), class: 'ml-3 text-warning' %>
            <%= link_to "Remove", bike_path(bike),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'ml-3 text-danger'%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
