<div class="banner">
  <div class="container text-center">
    <h1>Check your ride among <%= Bike.count %> bikes.</h1>
  </div>
</div>

<div class="container pt-4">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-6 col-md-3">
        <div class="bike-card">
          <%= cl_image_tag(bike.photo.key) %>
          <div class="bike-card-content">
            <div class="bike-card-title">
              <h5><%= bike.name %></h5>
              <h6><%= bike.description %></h6>
            </div>
            <p><%= bike.localization %></p>
              <i class="material-icons mr-2">â‚¬</i><%= bike.price %>/day
          </div>
          <div class="bike-card-actions">
            <%= link_to 'More informations', bike_path(bike) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <p>This app was coded at LeWagon</p>
</div>
