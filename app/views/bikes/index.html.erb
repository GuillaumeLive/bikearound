<div class="banner">
  <div class="container text-center">
    <h1>Find the bike you need among our <%= Bike.count %> bikes</h1>
  </div>
</div>
<div class="container pt-4">
  <div class="row">
    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-6">
          <div class="bike-card">
            <h5><%= link_to '+', new_bike_path %></h5>
          </div>
        </div>
          <% @bikes.each do |bike| %>
          <div class="col-6">
            <div class="bike-card">
              <%= cl_image_tag(bike.photo.key) %>
              <div class="bike-card-content">
                <div class="bike-card-title card-overflow">
                  <h5><%= bike.name %></h5>
                  <h6 class="card-overflow"><%= bike.description %></h6>
                </div>
                <p><%= bike.localization %></p>
                <i class="material-icons mr-2">â‚¬</i><%= bike.price %>/day
              </div>
              <div class="bike-card-actions">
                <%= link_to 'More informations', bike_path(bike) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
