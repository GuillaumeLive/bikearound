<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add your bike !</h1>

      <%= simple_form_for @bike do |f| %>
        <%= f.input :name %>
        <%= f.input :category, collection: Bike::CATEGORIES %>
        <%= f.input :size, collection: Bike::SIZES %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :localization %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
